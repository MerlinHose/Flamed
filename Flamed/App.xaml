<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Flamed"
             x:Class="Flamed.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="InvalidEntryStyle" TargetType="Entry">
                <Setter Property="TextColor" Value="{StaticResource Danger}"/>
                <Setter Property="PlaceholderColor" Value="{StaticResource Danger}"/>
                <Setter Property="BackgroundColor" Value="{StaticResource Gray200}"/>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>